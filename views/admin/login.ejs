<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Admin login</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="adminAssets/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="adminAssets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4 text-center"><%= (message === 'Username and password are incorrect!' || message === 'Mobile view Restricted!' || message === 'Username is incorrect' || message === 'Password is incorrect') ? message : 'Admin Login' %>
                    </h4>
             
                      
                    
                    <form method="post" onsubmit="return validateForm()">
                        <div class="mb-3">
                            <input class="form-control" placeholder="<%=  message === 'Username is incorrect' ? message : 'Username or email' %>" type="text" name="email" id="emailInput">
                            <input type="hidden" name="screenSize" id="screenSizeInput" value="">
                        </div>
                    
                        <div class="mb-3">
                            <input class="form-control" placeholder="<%=  message === 'Password is incorrect' ? message : 'Password' %>" type="password" name="password" id="passwordInput" maxlength="6">
                        </div>
                    
                        <div class="mb-3">
                            <a href="#" class="d-flex justify-content-center font-sm text-muted">Forgot password?</a>
                        </div>
                    
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100" onclick="updateScreenSize()"> Login </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <script src="adminAssets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="adminAssets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="adminAssets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="adminAssets/js/main.js" type="text/javascript"></script>


    <script>

function updateScreenSize() {
        var screenSizeInput = document.getElementById('screenSizeInput');
        screenSizeInput.value = window.innerWidth + 'px';
    }



        function validateForm() {
            // Get the values of email and password inputs
            var emailInput = document.getElementById('emailInput');
            var passwordInput = document.getElementById('passwordInput');
            var email = emailInput.value;
            var password = passwordInput.value;
    
            // Validate email format (you might want to use a more sophisticated validation)
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            var isEmailValid = emailRegex.test(email);
    
            // Validate password format (6-digit PIN)
            var isPasswordValid = /^\d{6}$/.test(password);
    
            // Reset styles
            emailInput.style.border = '1px solid #ced4da';
            passwordInput.style.border = '1px solid #ced4da';
    
            if (!isEmailValid) {
                // Display error for email
                emailInput.style.border = '1px solid red';
                emailInput.placeholder = 'Invalid email format';
                return false; // Prevent form submission
            }
    
            if (!isPasswordValid) {
                // Display error for password
                passwordInput.style.border = '1px solid red';
                passwordInput.placeholder = 'Invalid password format (6-digit PIN)';
                return false; // Prevent form submission
            }
    
            return true; // Proceed with form submission
        }
    </script>

</body>


