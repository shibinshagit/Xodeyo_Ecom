    <link href="adminAssets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
   <%- include('../partials/adminSideView.ejs') %>
    <main class="main-wrap">
        <%- include('../partials/adminHeader.ejs') %>   
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products </h2>
                    <p>Add, edit or delete a Product</p>
                </div>


                <div>
                    <a href="/admin/addproducts" class="btn btn-primary"><i
                            class="text-muted material-icons md-post_add"></i>Create </a>
                </div>


            </div>
            <div class="card">
                <div class="row align-items-center mx-2 my-4">
                    <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                      <div class="custom_select">
                        <select class="form-select" id="filterSelect">
                            <option value="all">Product status</option>
                            <option value="all">All product</option>
                            <option value="unblocked">Listed</option>
                            <option value="blocked">Unlisted</option>
                            <option value="instock">Instock</option>
                            <option value="outofstock">Out of stock</option>
                            
                        </select>
                    </div>
                  </div>
                    
                      <div class="col-md-2 col-6">
                          <div class="custom_select">
                              <select class="form-select select-nice">
                                  <option selected>Sort by Date</option>
                                  
                                  <option>Latest</option>
                                  <option>Earliest</option>
                                  
                              </select>
                          </div>
                      </div>
                  </div>
                <div class="card-body">
                    <div class="row">

                        <div class="col-md">
                            <div>


                                <% if (products.length> 0) { %>
                                    <table class="table" id="products">
                                        <thead>
                                            <tr>
                                                <th>image</th>
                                                <th>Name</th>
                                                <th>Category</th>
                                                <th>Stock</th>
                                                <th style="width: 70px;">Status</th>
                                                <th class="text-end">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let i=0; i < products.length; i++) { %>
                                                <tr onclick="window.location.href='/admin/editproduct?id=<%= products[i]._id.toString() %>'">
                                                    <td class="align-middle">
                                                        <img src="assets/imgs/productImages/<%= products[i].images[0] %>"

                                                            alt="Category Image" style="width: 45px;"  />
                                                    </td>
                                                    <td class="align-middle">
                                                        <%= products[i].productName %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <%= products[i].productCategory %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <%= products[i].stock %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <% if (products[i].isListed) { %>
                                                            <a href="/admin/unlistproduct?id=<%= products[i]._id.toString() %>">
                                                               <p class="text-danger ms-4">Unlist</p>
                                                            </a>
                                                          <% } else { %>
                                                            <a href="/admin/unlistproduct?id=<%= products[i]._id.toString() %>">
                                                                <p class="text-primary ms-4">List</p>
                                                            </a>
                                                          <% } %>
                                                    </td>
                                                    <td class="text-end align-middle">
                                                       
                                                        <a href="/admin/dltproduct?id=<%= products[i]._id.toString() %>" class="delete-link" onclick="event.stopPropagation();">
                                                            <i class="material-icons md-delete_forever "></i>
                                                        </a>
                                                        
                                                </td>
                                                    
                                                </tr>
                                            
                                                <% } %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <p>Products not found</p>
                                        <% } %>

                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation">
                  <ul class="pagination justify-content-start">
                    <% if (currentPage > 1) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">
                          <i class="material-icons md-chevron_left"></i>
                        </a>
                      </li>
                    <% } %>
                
                    <% for (let i = 1; i <= totalPages; i++) { %>
                      <li class="page-item <% if (i === currentPage) { %>active<% } %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                      </li>
                    <% } %>
                
                    <% if (currentPage < totalPages) { %>
                      <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">
                          <i class="material-icons md-chevron_right"></i>
                        </a>
                      </li> 
                    <% } %>
                  </ul>
                </nav>
              </div>
              
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, XodeyoDesigns.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="adminAssets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="adminAssets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="adminAssets/js/vendors/select2.min.js"></script>
    <script src="adminAssets/js/vendors/perfect-scrollbar.js"></script>
    <script src="adminAssets/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="adminAssets/js/main.js" type="text/javascript"></script>
    <!-- SweetAlert script -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


<script>


    var deleteLinks = document.getElementsByClassName('delete-link');

    for (var i = 0; i < deleteLinks.length; i++) {
        var productId = products[i]._id.toString();
    console.log('Product ID:', productId);
        deleteLinks[i].addEventListener('click', function (event) {
            // Prevent the default behavior of the link (prevents redirection)
            event.preventDefault();

            // Show SweetAlert
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be redirected until you click OK!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'OK',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If the user clicks OK, manually trigger the link redirection
                    window.location.href = event.target.href;
                }
            });
        });
    }
</script>

    

</body>


