<body>
    <div class="screen-overlay"></div>
    <%-include('../partials/adminSideView.ejs')%>
    <main class="main-wrap">
        <%-include('../partials/adminHeader.ejs')%>
        <section class="content-main">
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control">
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                           <select class="form-select" id="filterSelect">
                              <option value="all"style="display:none;">status</option>
                              <option value="all">All</option>
                              <option value="Online Payment">RazorPay</option>
                              <option value="Wallet">Wallet</option>
                              <option value="Cash On Delivery">Cash On Delivery</option>
                              
                          </select>
                            
                        </div>
                        <div class="col-lg-2 col-md-3 col-6">
                            <select class="form-select" id="perPageSelect" name="perPage">
                                <option value="5"style="display:none;">Show</option>
                                <option value="10">Show 10</option>
                                <option value="20">Show 20</option>
                                <option value="<%=  %>">Show All</option>
                            </select>
                        </div>
                    </div>
                </header>

                <div class="card-body">
                    <div class="d-flex" style="justify-content: center;">
                        <h2 class="content-title card-title">Sales Report</h2>

                    </div>

                    <p>Total Revenue: <%= totalRevenue.toFixed(2) %> INR</p>

                    <!-- Display Total Number of Sales -->
                    <p>Total Sales: <%= totalSales %>
                    </p>

                    <!-- Display Number of Products Sold -->
                    <p>Total Products Sold: <%= totalProductsSold %>
                    </p>

                    <!-- Display Product that is Mostly Sold -->



                    <table id="products" class="table">
                        <thead>
                            <tr>
                                <th scope="col">Order Id</th>
                                <th scope="col">Billing Name</th>
                                <th scope="col">Ordered Date</th>
                                <th scope="col">Delivery Date</th>
                                <th scope="col">Total</th>
                                <th scope="col">Status</th>
                                <th scope="col">Payment Status</th>
                                <th scope="col">Payment Method</th>
                            </tr>
                        </thead>
                        <tbody>

                            <% orders.forEach((order)=> { %>
                                <tr>
                                    <td>
                                        <%= order.orderID %>
                                    </td>
                                    <td>
                                        <%= order.user.name %>
                                    </td>
                                    <td>
                                        <%= new Date(order.orderDate).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <%= new Date(order.deliveryDate).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <%= order.totalAmount %>
                                    </td>
                                    <td>
                                        <% if (order.status=='Pending' ) { %>
                                            <span class="badge badge-pill badge-soft-warning">
                                                <%= order.status %>
                                            </span>
                                            <% } else if (order.status=='Order Confirmed' ) { %>
                                                <span class="badge badge-pill badge-soft-warning">
                                                    <%= order.status %>
                                                </span>
                                                <% } else if (order.status=='Shipped' ) { %>
                                                    <span class="badge badge-pill badge-soft-dark">
                                                        <%= order.status %>
                                                    </span>
                                                    <% } else if (order.status=='Out For Delivery' ) { %>
                                                        <span class="badge badge-pill badge-soft-dark">
                                                            <%= order.status %>
                                                        </span>
                                                        <% } else if (order.status=='Delivered' ) { %>
                                                            <span class="badge badge-pill badge-soft-success">
                                                                <%= order.status %>
                                                            </span>
                                                            <% } else if (order.status=='Return Successfull' ) { %>
                                                                <span class="badge badge-pill badge-soft-success">
                                                                    <%= order.status %>
                                                                </span>
                                                                <% } else { %>
                                                                    <span
                                                                        class="badge badge-pill badge-soft-danger">
                                                                        <%= order.status %>
                                                                    </span>
                                                                    <% } %>
                                    </td>
                                    <td>
                                        <% if (order.paymentStatus=='Pending' ) { %>
                                            <span class="badge badge-pill badge-soft-warning">
                                                <%= order.paymentStatus %>
                                            </span>
                                            <% } else if (order.paymentStatus=='Payment Successful' ) { %>
                                                <span class="badge badge-pill badge-soft-success">
                                                    <%= order.paymentStatus %>
                                                </span>
                                                <% } else if (order.paymentStatus=='Refund' ) { %>
                                                    <span class="badge badge-pill badge-soft-primary">
                                                        <%= order.paymentStatus %>
                                                    </span>
                                                    <% } else { %>
                                                        <span class="badge badge-pill badge-soft-danger">
                                                            <%= order.paymentStatus %>
                                                        </span>
                                                        <% } %>
                                    </td>

                                    <td>
                                        <%= order.paymentMethod %>
                                    </td>


                                </tr>
                                <% }); %>


                        </tbody>
                    </table>

                </div> <!-- card-body end// -->
            </div> <!-- card end// -->


        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
