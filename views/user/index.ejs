//     title: 'popping-love-title', // Style the title if needed
//     content: 'popping-love-content' // Style the content if needed
//   }
// });

            const successSound = document.getElementById('successSound');
            successSound.play();
          } else {
            Swal.fire({
              icon: 'info',
              title: 'already in your wishlist',
              text: 'buy now!',
              confirmButtonText: 'OK',
            });
          }
      
          // You can perform additional actions based on the response data if needed
        }
      
        function handleError() {
          // Display error SweetAlert
          Swal.fire({
            icon: 'error',
            title: 'Failed to add to wishlist',
            text: 'Please try again later.',
            confirmButtonText: 'OK',
          });
        }
      </script>
      






























  