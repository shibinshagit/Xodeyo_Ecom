<script>
   document.addEventListener('DOMContentLoaded', function () {
    const categoryLinks = document.querySelectorAll('.category-link');

    categoryLinks.forEach(function (link) {
        link.addEventListener('click', function (event) {
            event.preventDefault();

            const categoryValue = link.getAttribute('data-category');
            const searchValue = link.getAttribute('data-search') || '';
            const statusValue = link.getAttribute('data-status') || '';

            const newUrl = window.location.href.split('?')[0] + `?category=${encodeURIComponent(categoryValue)}&search=${encodeURIComponent(searchValue)}&status=${encodeURIComponent(statusValue)}`;
            window.history.pushState({ path: newUrl }, '', newUrl);

            // You can perform additional actions here if needed
            // For example, you may want to reload the page with the new URL
            window.location.reload();
        });
    });
});







function toggleSortOrder(event) {
    event.preventDefault();

    const url = new URL(window.location.href);
    const sortOrder = url.searchParams.get("sortOrder") || "1";

    // Toggle sortOrder between 1 and -1
    const newSortOrder = sortOrder === "1" ? "-1" : "1";

    url.searchParams.set("sortOrder", newSortOrder);

    window.location.href = url.toString();
}

// Attach the click event handler to the link
const sortToggleLink = document.getElementById("sortToggle");

if (sortToggleLink) {
    sortToggleLink.addEventListener("click", toggleSortOrder);
}

</script>

    

